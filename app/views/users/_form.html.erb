<script src="/preview.js"></script>
  <% if user.errors.any? %>
    <div style="color: red">
    <h2><%=t(:prohibited)%>:</h2>
      <ul>
        <% user.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

<%= form_for user, action:"", class:"ui-form"  do |form| %>
<div class='login'>


  <div>
    <%= form.label :username, style: "display: block" %>
    <%= form.text_field :username, class: "form-row" %>
  </div>

<div class="upload-preview imag">
    <img />
</div>
<%= form.file_field 'avatar', class:'form control file'%>
    <div>
    <%= form.label :password, style: "display: block" %>
    <%= form.password_field :password %>
  </div>
  <div>
    <%= form.label :password_confirmation, style: "display: block" %>
    <%= form.password_field :password_confirmation %>
  </div>
  <div class='imag'>
    <%= form.label :email, style: "display: block" %>
    <%= form.text_field :email %>
  </div>
  <div>
    <%= form.submit  id: 'submit-btn' %>
  </div>

<% end %>
</div>